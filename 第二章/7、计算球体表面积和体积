#include <iostream>
#include <cmath>
#include <iomanip>

using namespace std;

int main()
{
    const double Pi = 3.14;
    int radius;
    double area, volume;
    cin >> radius;
    area = 4 * Pi * pow(radius, 2);
    volume = (4 * Pi * pow(radius, 3))/3;
    cout << setiosflags(ios::fixed) << setprecision(1) << "半径为" << radius << "的球体积为" << volume << "\n半径为" << radius << "的球体表面积为" << area;
    return 0;
}
